@model IEnumerable<IS_SISTEMA.models.Subjects>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>

    <h1>
        Viko EIF
    </h1>
    
    <nav class="navbaras">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/admin/subjects/subject">Subjects</a></li>
            <li><a href="/admin/students/studentss">Students</a></li>
            <li><a href="/admin/professor/professors">Professors</a></li>
            <li><a href="/admin/groups/groupss">Groups</a></li>
        </ul>
    </nav>

    <nav class="navbarr">
        <ul>
            <li><a href="/admin/subjects/addsubject">Add New Subject</a></li>
            <li><a href="/admin/subjects/deletesubject">Delete Subject</a></li>
            <li><a href="/admin/subjects/addsubjectprofessor">Add professor To Subject</a></li>
        </ul>
    </nav>

    <main>
        <h3>Subject list</h3>
        <p>Lorem, ipsum dolor sit amet ue consequatur labore et debitis tempore sed dolores possimus voluptate. Nobis tempora dolor amet similique sint.</p>
        
        <table class="table table-striped table-bordered">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Professor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subjects in Model){
            <tr>
            <td>@subjects.id</td>
            <td>@subjects.Subjectname</td>
            
            </tr>
            }
        </tbody>
        </table>
    </main>

    <script>
        function fetchSubjectUsers() {  
            fetch('/api/subject-users')
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok ' + response.statusText);
                    }
                    return response.text();
                })
                .then(data => {
                    console.log('Fetched Data:', data);
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }

        // Fetch data when the page loads
        window.onload = fetchSubjectUsers;
    </script>

</body>
</html>